server {
    listen 80;
    listen [::]:80;

    server_name eloygomes.com.br www.eloygomes.com.br;

    # Redirecionar todas as solicitações HTTP para HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name eloygomes.com.br www.eloygomes.com.br;

    ssl_certificate /etc/letsencrypt/live/eloygomes.com.br/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/eloygomes.com.br/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    location / {
        proxy_pass http://localhost:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
